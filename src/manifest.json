{
  "manifest_version": 2,
  "name": "moz-commerce",
  "version": "0.1.0",
  "description": "",
  "applications": {
    "gecko": {
      "id": "commerce@mozilla.org"
    }
  },
  "icons": {
    "48": "img/shopping_list_48.png",
    "96": "img/shopping_list_96.png"
  },
  "background": {
    "scripts": ["background.bundle.js"]
  },
  "browser_action": {
    "default_icon": {
      "16": "img/shopping_list.svg",
      "32": "img/shopping_list.svg"
    },
    "default_title": "Tracked Products",
    "default_popup": "browser_action/index.html"
  },
  "permissions": [
    "<all_urls>",
    "tabs",
    "storage",
    "unlimitedStorage",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "telemetry"
  ],
  "experiment_apis": {
    "shoppingPrefs": {
      "schema": "experiment_apis/shoppingPrefs/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "experiment_apis/shoppingPrefs/api.js",
        "paths": [["shoppingPrefs"]]
      }
    }
  }
}
