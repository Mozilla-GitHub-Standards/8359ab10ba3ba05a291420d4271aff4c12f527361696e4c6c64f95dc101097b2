{
  "manifest_version": 2,
  "name": "moz-commerce",
  "version": "0.1.0",
  "description": "",
  "applications": {
    "gecko": {
      "id": "commerce@mozilla.org"
    }
  },
  "icons": {
    "16": "img/shopping_basket.svg",
    "24": "img/shopping_basket.svg",
    "48": "img/shopping_basket.svg",
    "96": "img/shopping_basket.svg"
  },
  "background": {
    "scripts": ["background.bundle.js"]
  },
  "browser_action": {
    "default_icon": {
      "16": "img/tracking.svg",
      "32": "img/tracking.svg"
    },
    "default_title": "Tracked Products",
    "default_popup": "browser_action/index.html"
  },
  "permissions": [
    "<all_urls>",
    "tabs",
    "storage",
    "unlimitedStorage",
    "notifications",
    "webRequest",
    "webRequestBlocking"
  ]
}
