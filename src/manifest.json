{
  "manifest_version": 2,
  "name": "moz-commerce",
  "version": "0.1.0",
  "description": "",
  "applications": {
    "gecko": {
      "id": "commerce@mozilla.org"
    }
  },
  "icons": {
    "16": "icon.svg",
    "24": "icon.svg",
    "48": "icon.svg",
    "96": "icon.svg"
  },
  "background": {
    "scripts": ["background.bundle.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["product_info.bundle.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "permissions": [
    "<all_urls>",
    "tabs"
  ]
}
